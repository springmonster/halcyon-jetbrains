<idea-plugin>
  <id>com.kuanghc.halcyon-jetbrains</id>
  <name>Halcyon Copy Theme</name>
  <vendor email="609779612@qq.com" url="https://github.com/springmonster">springmonster</vendor>
  <description><![CDATA[
    <p>Based on
    <a href="https://github.com/ADMARIl/halcyon-jetbrains">https://github.com/ADMARIl/halcyon-jetbrains</a>
    This is a theme plugin for JetBrains IDEs.</p>
    ]]></description>
  <idea-version since-build="201.6668"/>
  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <themeProvider id="a20dcb56-3527-478b-b687-b4b9bc4971b1" path="/HalcyonCopy.theme.json"/>
    <postStartupActivity
      implementation="com.kuanghc.halcyonjetbrains.HandleStartup.StartupWelcomeActivity"/>
    <notificationGroup id="Halcyon Copy Theme" displayType="BALLOON"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>
</idea-plugin>
